{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SMCal",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": [
          "string",
          "number"
        ]
      },
      "title": {
        "type": "string"
      },
      "day": {
        "type": "integer",
        "minimum": 1,
        "maximum": 7
      },
      "week": {
        "type": "integer",
        "minimum": 1,
        "maximum": 4
      },
      "platform": {
        "type": "string"
      }
    },
    "required": [
      "title",
      "day",
      "week"
    ]
  }
}